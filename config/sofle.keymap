#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>

#define BASE 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3

/ {
    // Activate ADJUST layer by pressing raise and lower

    conditional_layers { compatible = "zmk,conditional-layers"; };

    behaviors {
        td_layer: td_layer {
            compatible = "zmk,behavior-tap-dance";
            label = "TD_LAYER";
            #binding-cells = <0>;
            bindings = <&mo 1>, <&tog 2>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "default";

            // ------------------------------------------------------------------------------------------------------------
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |       |
            // |  ESC  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   | BKSPC |
            // |  TAB  |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |  MUTE  |  |       |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //               | GUI | ALT  | CTRL | LOWER|  ENTER |  | SPACE | RAISE| CTRL  | ALT   | GUI  |

            bindings = <
&kp GRAVE  &kp N1  &kp N2    &kp N3    &kp N4     &kp N5                                                   &kp N6     &kp N7     &kp N8     &kp N9    &kp N0    &kp A
&kp ESC    &kp Q   &kp W     &kp E     &kp R      &kp T                                                    &kp Y      &kp U      &kp I      &kp O     &kp P     &kp BSPC
&kp TAB    &kp A   &kp S     &kp D     &kp F      &kp G                                                    &kp H      &kp J      &kp K      &kp L     &kp SEMI  &kp SQT
&kp LSHFT  &kp Z   &kp X     &kp C     &kp V      &kp B      &kp LG(LEFT_ALT)    &kp LS(LA(LC(LEFT_GUI)))  &kp N      &kp M      &kp COMMA  &kp DOT   &kp FSLH  &kp RSHFT
                   &kp LGUI  &kp LALT  &kp LCTRL  &kp SPACE  &kp RET             &kp SPACE                 &td_layer  &kp RCTRL  &kp RALT   &kp RGUI
            >;

            sensor-bindings =
                <&inc_dec_kp UP_ARROW DOWN_ARROW>,
                <&inc_dec_kp RIGHT_ARROW LEFT_ARROW>;
        };

        raise_layer {
            display-name = "raise";

            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |      |      |       |      |       |       |
            // |       | INS  | PSCR | GUI   |       |      |                | PGUP |      |   ^   |      |       |       |
            // |       | ALT  | CTRL | SHIFT |       | CAPS |                | PGDN |   <- |   v   |  ->  |  DEL  | BKSPC |
            // |       | UNDO | CUT  | COPY  | PASTE |      |      |  |      |      |      |       |      |       |       |
            //                |      |       |       |      |      |  |      |      |      |       |      |

            bindings = <
&bt BT_CLR  &kp F1      &kp F2     &kp F3       &kp F4       &kp F5                      &kp F6            &kp F7             &kp F8    &kp F9     &kp F10    &kp F11
&trans      &kp INS     &kp PSCRN  &kp K_CMENU  &trans       &trans                      &kp PG_UP         &kp HOME           &kp UP    &kp END    &kp EQUAL  &kp F12
&trans      &kp LALT    &kp LCTRL  &kp LSHFT    &trans       &kp CLCK                    &kp PG_DN         &kp LEFT           &kp DOWN  &kp RIGHT  &kp DEL    &kp BSPC
&trans      &kp K_UNDO  &kp K_CUT  &kp K_COPY   &kp K_PASTE  &trans    &trans    &trans  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &trans    &trans     &kp BSLH   &tog 2
                        &trans     &trans       &trans       &trans    &trans    &trans  &trans            &trans             &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>, <&inc_dec_kp PG_UP PG_DN>;

        };

        numpad {
            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3       &bt BT_SEL 4                      &kp KP_NUMLOCK  &kp EQUAL        &kp FSLH      &kp LS(STAR)  &kp MINUS     &kp BSPC
&trans      &trans        &trans        &trans        &ext_power EP_TOG  &bt BT_CLR_ALL                    &kp SPACE       &kp N7           &kp N8        &kp N9        &kp DEL       &trans
&trans      &trans        &trans        &trans        &trans             &trans                            &kp PLUS        &kp N4           &kp N5        &kp N6        &kp KP_PLUS   &trans
&trans      &trans        &trans        &trans        &trans             &trans          &trans    &trans  &trans          &kp NUMBER_1     &kp NUMBER_2  &kp NUMBER_3  &kp KP_ENTER  &tog 2
                          &trans        &trans        &trans             &trans          &trans    &trans  &trans          &kp KP_NUMBER_0  &kp PERIOD    &kp COMMA
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>, <&inc_dec_kp PG_UP PG_DN>;

        };
    };
};
